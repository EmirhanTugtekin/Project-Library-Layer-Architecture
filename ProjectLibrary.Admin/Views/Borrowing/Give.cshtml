@model ProjectLibrary.Data.Borrowing
@{
    ViewBag.Title = "Give";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts2/jquery-3.3.1.js"></script>
<br />
<form class="form-group" method="post">

    @Html.LabelFor(x => x.MemberID, "Üye ID:")
    @Html.TextBoxFor(x => x.MemberID, new { @class = "form-control" })

    @Html.LabelFor(x => x.BookID, "Kitap ID:")
    @Html.TextBoxFor(x => x.BookID, new { @class = "form-control" })

    @Html.LabelFor(x => x.StuffID, "Personel ID:")
    @Html.TextBoxFor(x => x.StuffID, new { @class = "form-control" })

    @Html.LabelFor(x => x.DateOfBorrowed, "Ödünç Alınma Tarihi:") 
    <input type="text" class="form-control" name="DateOfBorrowed" value="@DateTime.Now.ToShortDateString()" />

    @Html.LabelFor(x => x.DateOfReturn, "Geri Iade Tarihi:")
    <input type="text" class="form-control" name="DateOfReturn" value="@DateTime.Now.AddDays(14).ToShortDateString()" />

    <br />
    <button class="btn btn-info" id="Btn1">Ödünç Ver</button>
    <input type="hidden" value="False" name="SituationOfBorrowing"/> @*bu yazılmazsa situationOfBorrowing işlemi false yerine null olur*@

    <script>
        $('#Btn1').click(function () {
            alert("Kitap başarılı bir şekilde ödünç verildi")
        });
    </script>
</form>

<a href="/Borrowing/GiveBack">Ödünç Ver Listesine Geri Dön</a>

