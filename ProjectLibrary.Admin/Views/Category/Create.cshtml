@model ProjectLibrary.Data.Category
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts2/jquery-3.3.1.js"></script>
<br />
<h2>Yeni Kategori Ekle</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.CategoryName, "Kategori Adı:")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @*virgülden sonraki new ile başlayan kısım textbox'a css vermek için*@
    
    <br />
    <button class="btn btn-info" id="Btn1">KAYDET</button>
    <script>
        $('#Btn1').click(function ()
        {
            alert("Kategori başarılı bir şekilde eklendi")
        });
    </script>
</form>

<a href="/Category/Index">Kategori Listesine Geri Dön</a>

