@model ProjectLibrary.Data.Category

@{
    ViewBag.Title = "Kategori Düzenleme";
}

<h2>Kategori Düzenleme</h2>
<script src="~/Scripts2/jquery-3.3.1.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CategoryID)
    <div class="form-group">
        @Html.LabelFor(model => model.CategoryName,"Kategori Adı:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="Btn1" type="submit" value="Kaydet" class="btn btn-success" />
        </div>
    </div>

    <script>
        $('#Btn1').click(function () {
            alert("Kategori başarılı bir şekilde güncellendi")
        });
    </script>

</div>


}

<div>
    @Html.ActionLink("Listeye Dön", "Index")
</div>

