@model ProjectLibrary.Data.Stuff
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts2/jquery-3.3.1.js"></script>


<br />
<h2>Yeni Personel Ekle</h2>
<br />
<form class="form-group" method="post">

    @Html.LabelFor(x => x.StuffName, "Personel Adı:")
    @Html.TextBoxFor(x => x.StuffName, new { @class = "form-control" })

    @Html.LabelFor(x => x.StuffSurname, "Personel Soyadı:")
    @Html.TextBoxFor(x => x.StuffSurname, new { @class = "form-control" })

    @Html.LabelFor(x => x.NickName, "Kullanıcı Adı:")
    @Html.TextBoxFor(x => x.NickName, new { @class = "form-control" })

    @Html.LabelFor(x => x.Password, "Şifre:")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })

    @Html.LabelFor(x => x.Email, "EPosta:")
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

    @Html.LabelFor(x => x.DateOfHiring, "İşe Giriş Tarihi:")
    @Html.TextBoxFor(x => x.DateOfHiring, new { @class = "form-control" })

    @Html.LabelFor(x => x.DateOfBirth, "Doğum Tarihi:")
    @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control" })

    @Html.LabelFor(x => x.Photo, "Fotoğraf:")
    @Html.TextBoxFor(x => x.Photo, new { @class = "form-control" })


    <br />
    <button class="btn btn-info" id="Btn1">KAYDET</button>




    <script>
        $('#Btn1').click(function () {
            alert("Personel başarılı bir şekilde eklendi")
        });


    </script>
</form>

<a href="/Stuff/Index">Personel Listesine Geri Dön</a>