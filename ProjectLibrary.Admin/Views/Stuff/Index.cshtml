@model System.Collections.Generic.IEnumerable<ProjectLibrary.Data.Stuff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Stuff", FormMethod.Get))
{
    <div style="margin-top:15px; margin-bottom:15px;">
        <b>Aranacak kitabı giriniz: &nbsp</b>@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </div>
}

<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>PERSONEL ADI</th>
        <th>PERSONEL SOYADI</th>
        <th>KULLANICI ADI</th>
        <th>ŞİFRE</th>
        <th>EMAIL</th>
        <th>İŞE GİRİŞ TARİHİ</th>
        <th>DOĞUM TARİHİ</th>
        <th>FOTOĞRAF</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
    </tr>

    @foreach (var k in Model)
    {

        <tr>
            <td>@k.StuffID</td>
            <td>@k.StuffName</td>
            <td>@k.StuffSurname</td>
            <td>@k.NickName</td>
            <td>@k.Password</td>
            <td>@k.Email</td>
            <td>@k.DateOfHiring</td>
            <td>@k.DateOfBirth</td>
            <td>@k.Photo</td>
            <td>@Html.ActionLink("Düzenle", "Edit", new { id = k.StuffID }) </td>
            <td>@Html.ActionLink("Sil", "Delete", new { id = k.StuffID })  </td>

        </tr>
    }

</table>


<a href="/Stuff/Create" class="btn btn-primary">Personel ekle</a>
