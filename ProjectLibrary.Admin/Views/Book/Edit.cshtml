@model ProjectLibrary.Data.Book

@{
    ViewBag.Title = "Kategori Düzenleme";
}

<h2>Kitap Düzenleme</h2>
<script src="~/Scripts2/jquery-3.3.1.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model =>model.BookID)
        <div class="form-group">

            @Html.ValidationMessageFor(model => model.BookName, "Kitap Adı:", new { @class = "text-danger" })
            @Html.EditorFor(model => model.BookName, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.PublishYear, "Yayın yılı:", new { @class = "text-danger" })
            @Html.EditorFor(model => model.PublishYear, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.Publisher, "Yayıncı:", new { @class = "text-danger" })
            @Html.EditorFor(model => model.Publisher, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.Available, "Durum:", new { @class = "text-danger" })
            @Html.EditorFor(model => model.Available, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.Language, "Dil:", new { @class = "text-danger" })
            @Html.EditorFor(model => model.Language, new { htmlAttributes = new { @class = "form-control" } })

            @Html.LabelFor(x => x.Category.CategoryID, "Kategori:")
            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })

            @Html.LabelFor(x => x.AuthorID, "Yazar:")
            @Html.DropDownListFor(x => x.AuthorID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })

            @Html.LabelFor(x => x.LocationID, "Kat/Bölüm:")
            @Html.DropDownListFor(x => x.LocationID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })

            @Html.Label("Fotoğraf", htmlAttributes: new { @class = "control-label col-md-2" })
            <input type="file" name="Image" />


        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="Btn1" type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>

        <script>
        $('#Btn1').click(function () {
            alert("Kitap başarılı bir şekilde güncellendi")
        });
        </script>

    </div>


}

<div>
    @Html.ActionLink("Listeye Dön", "Index")
</div>

